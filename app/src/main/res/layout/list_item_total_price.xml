<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <include layout="@layout/activity_line_horizontal"/>
    <LinearLayout
        android:id="@+id/ll_discount_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="折扣"
            android:textColor="@color/text_color_common"
            android:textSize="15sp"
        />
        <include layout="@layout/activity_line_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/tv_discount_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="电子类 七折"
                android:textColor="@color/toolbar_title_color"
                android:textSize="14sp"
            />

            <TextView
                android:id="@+id/tv_discount_expirationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="截止日期 : 2016.01.30"
                android:textColor="@color/toolbar_title_color"
                android:textSize="12sp"
            />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_line_horizontal"/>
    <LinearLayout
        android:id="@+id/ll_privilege_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="优惠券"
            android:textColor="@color/text_color_common"
            android:textSize="15sp"
        />
        <include layout="@layout/activity_line_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_privilege_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="满1000减200"
                android:textColor="@color/toolbar_title_color"
                android:textSize="14sp"
            />

            <TextView
                android:id="@+id/tv_privilege_expirationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="截止日期 : 2016.01.30"
                android:textColor="@color/toolbar_title_color"
                android:textSize="12sp"
            />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="合计: "
            android:textColor="@color/toolbar_title_color"
            android:textSize="16sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="立即结算"
            android:textColor="@color/toolbar_title_color"
            android:textSize="16sp"
        />


    </LinearLayout>

</LinearLayout>